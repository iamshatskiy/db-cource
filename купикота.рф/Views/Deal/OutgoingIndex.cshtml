@model  IEnumerable<купикота.рф.Models.AdvertViewModels.DealViewModel>
@{
    ViewData["Title"] = "Исходящие заявки";
}

<h4>Исходящие заявки</h4>

<table class="table">
    <tr><th>Объявление</th><th>Имя</th><th>Телефон</th><th>Email</th><th></th></tr>
    @foreach (var deal in Model)
    {
        <tr>
            <td>
                <form asp-action="More" asp-route-id="@deal.AdvertId">
                    <input type="hidden" id="aid" name="aid" value="@deal.AdvertId" />
                    <input type="submit" class="btn btn-primary" asp-action="More" asp-controller="Adverts" asp-route-aid="@deal.AdvertId" value="Объявление" />


                </form>
            </td>
            <td>@deal.OwnerName</td>
            <td>@deal.OwnerNum</td>
            <td>@deal.OwnerEmail</td>

            <td>
                <form asp-action="BuyerConformition" asp-controller="Deal" method="post">
                    <input type="hidden" id="DealId" name="DealId" value="@deal.Id" />
                    <input type="hidden" id="state" name="state" value="-1" />
                    <input type="submit" class="btn btn-danger" asp-action="BuyerConformition" asp-controller="Deal" value="Отклонить" />

                </form>
                <form asp-action="BuyerConformition" asp-controller="Deal" method="post">
                    <input type="hidden" id="DealId" name="DealId" value="@deal.Id" />
                    <input type="hidden" id="state" name="state" value="1" />
                    <input type="submit" class="btn btn-success" asp-action="BuyerConformition" asp-controller="Deal" value="Подтвердить" />

                </form>
            </td>
        </tr>
    }
</table>