@model SetPasswordViewModel
@{
    ViewData["Title"] = "Установка пароля";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<h4>Введите свой пароль</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<p class="text-info">
    У вас нет локального имени пользователя/пароля для этого сайта. Добавить местный
    учетную запись, чтобы вы могли войти в систему без внешнего входа.
</p>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Установить пароль</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
